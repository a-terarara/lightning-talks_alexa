@require "./base"

#desc {
  width: 30em;
  border-collapse: collapse;
  
  & th {
    background-color: whitesmoke;
    padding: 1em;
    text-align: left;
    border: 1px solid black;
    padding: 1em;
  }
  
  & td {
    border: 1px solid black;
    text-align: left;
    padding: 1em;
  }
}

#left {
  list-style: none;
  margin-left: 0;
  padding-left: 1em;
  text-indent: -1em;
  text-align: left;
}